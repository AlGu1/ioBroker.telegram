{
    "common": {
        "name":                     "telegram",
        "require": {
            "js-controller": ">0.6.6"
        },
        "version": "1.0.5",
        "news": {
            "1.0.5": {
                "en": "Added support for inline keyboard, added functions: editMessageReplyMarkup, answerCallbackQuery, editMessageText",
                "de": "Zusätzliche Unterstützung für inline keyboard, zusätzlichen Features: editMessageReplyMarkup, answerCallbackQuery, editMessageText",
                "ru": "Добавлена поддержка inline keyboard, добавлены функции: editMessageReplyMarkup, answerCallbackQuery, editMessageText"
            },
            "1.0.4": {
                "en": "Fix longitude and latitude",
                "de": "Korrigiere longitude and latitude",
                "ru": "Исправлено сообщение с координатами"
            },
            "1.0.3": {
                "en": "Fix position message",
                "de": "Korrigiere Positionsmeldung",
                "ru": "Исправлено сообщение с координатами"
            },
            "1.0.2": {
                "en": "show only installed instances in blockly",
                "de": "Zeige nur installierten Instanzen im Blockly",
                "ru": "Показывать только установленные инстанции в Blockly"
            },
            "1.0.1": {
                "en": "Show user name in error message",
                "de": "Zeige Username bei Fehler",
                "ru": "Показывать имя пользователя при ошибках"
            },
            "1.0.0": {
                "en": "Server mode, no polling",
                "de": "Server-Modus, kein Polling",
                "ru": "Поддержка сервера без поллинга"
            },
            "0.4.4": {
                "en": "support of blockly",
                "de": "Blockly-Unterstützung",
                "ru": "Поддержка blockly"
            },
            "0.4.3": {
                "en": "filter out double messages",
                "de": "Ausfiltern doppelte Meldungen",
                "ru": "Отфильтровывать двойные сообщения"
            },
            "0.4.2": {
                "en": "translations\nconfigurable restarting/started texts",
                "de": "translations\nconfigurable restarting/started texts",
                "ru": "translations\nconfigurable restarting/started texts"
            },
            "0.4.1": {
                "en": "response to chatId and not to userId\ncut messages with @\nadd new states: requestChatId and requestUserId",
                "de": "response to chatId and not to userId\ncut messages with @\nadd new states: requestChatId and requestUserId",
                "ru": "response to chatId and not to userId\ncut messages with @\nadd new states: requestChatId and requestUserId"
            },
            "0.4.0": {
                "en": "allow send messages to chats via chat-ID\nsupport of video(mp4), audio, document, location, sticker, action",
                "de": "allow send messages to chats via chat-ID\nsupport of video(mp4), audio, document, location, sticker, action",
                "ru": "allow send messages to chats via chat-ID\nsupport of video(mp4), audio, document, location, sticker, action"
            },
            "0.3.0": {
                "en": "restart connection every hour",
                "de": "restart connection every hour",
                "ru": "restart connection every hour"
            }
        },
        "title":                    "Telegram Adapter",
        "desc":                     {
            "en": "This adapter allows to send and receive telegram messages from ioBroker and to be a bot",
            "de": "Adapter ermöglicht eine Kommunikation mit dem telegram app und ist selbst ein bot",
            "ru": "Драйвер запускает Telegram бот, с которым можно общаться по App или через броузер"
        },
        "authors": [
            "bluefox <dogafox@gmail.com>"
        ],
        "license":                  "MIT",
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "messagebox":               true,
        "readme":                   "https://github.com/ioBroker/ioBroker.telegram/blob/master/README.md",
        "loglevel":                 "info",
        "icon":                     "telegram.png",
        "keywords":                 ["notification", "telegram", "message"],
        "extIcon":                  "https://raw.githubusercontent.com/ioBroker/ioBroker.telegram/master/admin/telegram.png",
		"type":                     "communication",
        "blockly":                  true,
        "config": {
            "minWidth":   800,
            "width":      1224,
            "height":     600
        }
    },
    "native": {
        "server":         "false",
        "port":           8443,
        "bind":           "0.0.0.0",
        "token":          "",
        "password":       "",
        "text2command":   "",
        "rememberUsers":  true,
        "restarting":     "_",
        "restarted":      "_",
        "url":            "",
        "certPublic":     "",
        "certPrivate":    "",
        "certChained":    "",

        "leEnabled":      false,
        "leUpdate":       false,
        "leCheckPort":    80
    },
    "objects": [

    ],
    "instanceObjects": [
        {
            "_id":  "info",
            "type": "channel",
            "common": {
                "name": "Information"
            },
            "native": {}
        },
        {
            "_id":  "info.connection",
            "type": "state",
            "common": {
                "role":  "indicator.connected",
                "name":  "If connected to Telegram server",
                "type":  "boolean",
                "read":  true,
                "write": false,
                "def":   false
            },
            "native": {}
        },
        {
            "_id":  "communicate.request",
            "type": "state",
            "common": {
                "role":  "text",
                "name":  "Last received request",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "communicate.requestChatId",
            "type": "state",
            "common": {
                "role":  "text",
                "name":  "Chat ID of last received request",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "communicate.requestMessageId",
            "type": "state",
            "common": {
                "role":  "text",
                "name":  "Message ID of last received request",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "communicate.requestUserId",
            "type": "state",
            "common": {
                "role":  "text",
                "name":  "User ID of last received request",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "communicate.response",
            "type": "state",
            "common": {
                "role":  "text",
                "name":  "Send text through telegram",
                "type":  "string",
                "read":  true,
                "write": true
            },
            "native": {}
        },
        {
            "_id":  "communicate.users",
            "type": "state",
            "common": {
                "role":  "text",
                "name":  "Users as json, which are constantly authenticated",
                "type":  "string",
                "read":  false,
                "write": false
            },
            "native": {}
        }
    ]
}
